extends ../../layouts/default

block intro
	.container: .row: .col-md-6.col-md-offset-3
		.page-header
			h1 Forgotten your password?
			p.lead No problem, we'll send you a link to reset it.

block content
	.row: .col-md-6.col-md-offset-3
		form(method='post', novalidate).forgot-password
			input(type='hidden', name='action', value='send-password')
			.form-group
				label Email
				input(type='email', name='email', placeholder='').form-control
			button(type='submit').btn.btn-primary.btn-lg Send
			a(href='/signin').btn.btn-link Sign in

block js
	script.
		var $form = $('.forgot-password');
		
		var $submit = $form.find('.btn');
		
		$submit.click( function() {
			$submit.addClass( 'disabled' );
		});
		
		$form.find("input[type!='hidden']").first().focus();
