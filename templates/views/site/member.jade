extends ../../layouts/default

block content
	.container-sm
		.page-intro
			.text-left: a(href='/members').text-muted &larr; back to all members
			//- hr
			//- code=JSON.stringify(member)
		.member
			if member.photo.exists
				.member-section.member__photo
					img(src=member._.photo.thumbnail(360,360), width=180, height=180, alt=member.name.full, style='margin-top: -3em;')
			.member-section.member__info
				h1= member.name.full
				p.lead Member since #{moment(member.createdOn).format('MMMM YYYY')}
				if member.twitter || member.github
					.member__accounts
						if member.twitter
							a(href='https://twitter.com/' + member.twitter.replace('@', ''), target='_blank', data-toggle='tooltip', title='@' + member.twitter.replace('@', ''), data-placement='top').member__account.member__account--twitter
								span.entypo-social.entypo-twitter
								|  #{member.twitter.replace('@', '')}
						if member.github
							a(href='https://github.com/' + member.github, target='_blank', data-toggle='tooltip', title=member.github, data-placement='top').member__account.member__account--github
								span.entypo-social.entypo-github
								|  #{member.github.replace('@', '')}
				if member.bio.html
					.member__bio.text-left.pl-2.pr-2.pb-1!= member.bio.html
		if member.talks && member.talks.length
			h3.text-muted.mt-0 Talks
			ul.list-unstyled
				each talk in member.talks
					li.media(class=moment(talk.meetup.date) < moment(now) ? 'past' : 'present')
						.pull-left
							.date
								small.block=moment(talk.meetup.date).format('MMM')
								strong.block=moment(talk.meetup.date).format('DD')
						.media-body
							h4=talk.name
							!=talk.description